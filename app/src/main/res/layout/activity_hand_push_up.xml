<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HandPushUpActivity">

    <ImageView
        android:id="@+id/ic_oval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_push_up_oval"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iv_training_boy"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/skills_trainig_boy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:src="@drawable/fav_icon"
        app:layout_constraintBottom_toBottomOf="@+id/ic_oval"
        app:layout_constraintRight_toRightOf="@+id/ic_oval"
        android:layout_marginEnd="25dp" />

    <TextView
        android:id="@+id/tv_hand_pushUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sfpro_bold"
        android:textColor="@color/black"
        android:text="@string/handstand_pushups"
        android:textSize="33sp"
        app:layout_constraintTop_toBottomOf="@+id/iv_training_boy"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2"
        android:layout_marginTop="10dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="46dp" />

    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rating="5"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:theme="@style/RatingBar"
        app:layout_constraintTop_toBottomOf="@+id/tv_hand_pushUp"
        app:layout_constraintLeft_toLeftOf="@id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/advanced"
        android:fontFamily="@font/sfpro_bold"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@+id/ratingBar"
        app:layout_constraintTop_toTopOf="@+id/ratingBar"
        app:layout_constraintBottom_toBottomOf="@+id/ratingBar"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/tv_hand_pushUp_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/the_handstand_push"
        android:textSize="16sp"
        android:lineSpacingExtra="2sp"
        android:fontFamily="@font/sefpro_regular"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="25dp"
        android:layout_marginTop="5dp"
        android:textAlignment="viewStart"
        android:gravity="start"
        android:layout_marginEnd="25dp" />

    <ImageView
        android:id="@+id/iv_cooment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/comment"
        app:layout_constraintStart_toStartOf="@id/guideline2"
        app:layout_constraintLeft_toLeftOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/tv_hand_pushUp_description"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="07"
        app:layout_constraintLeft_toRightOf="@+id/iv_cooment"
        app:layout_constraintTop_toTopOf="@+id/iv_cooment"
        app:layout_constraintBottom_toBottomOf="@+id/iv_cooment"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp" />

    <ImageView
        android:id="@+id/iv_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/like"
        app:layout_constraintLeft_toRightOf="@+id/tv_comment"
        app:layout_constraintTop_toTopOf="@+id/tv_comment"
        app:layout_constraintBottom_toBottomOf="@+id/tv_comment"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="64"
        app:layout_constraintLeft_toRightOf="@+id/iv_like"
        app:layout_constraintTop_toTopOf="@id/iv_like"
        app:layout_constraintBottom_toBottomOf="@+id/iv_like"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"/>

    <ImageView
        android:id="@+id/iv_person3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/user5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="25dp"
        android:scaleType="center"
        android:background="@drawable/user3"
        app:layout_constraintTop_toBottomOf="@+id/tv_hand_pushUp_description"/>

    <ImageView
        android:id="@+id/iv_person2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/user2"
        app:layout_constraintRight_toLeftOf="@+id/iv_person3"
        app:layout_constraintTop_toTopOf="@+id/iv_person3"
        app:layout_constraintBottom_toBottomOf="@+id/iv_person3"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/user1"
        app:layout_constraintRight_toLeftOf="@+id/iv_person2"
        app:layout_constraintTop_toTopOf="@+id/iv_person2"
        app:layout_constraintBottom_toBottomOf="@+id/iv_person2"/>

    <View
        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#808080"
        app:layout_constraintStart_toStartOf="@id/guideline2"
        app:layout_constraintLeft_toLeftOf="@id/guideline2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_person2"
        android:layout_marginTop="25dp"/>

   <TextView
       android:id="@+id/tv_requirements"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Requirements"
       android:textColor="@color/black"
       android:textSize="28sp"
       android:fontFamily="@font/sfpro_bold"
       app:layout_constraintLeft_toLeftOf="@id/guideline2"
       app:layout_constraintTop_toBottomOf="@id/view1"
       android:layout_marginTop="8dp"/>

    <HorizontalScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/tv_requirements">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:cardElevation="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_skills_trainig"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tv_count"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/circular_background"
                        android:text="@string/_15"
                        android:textSize="12sp"
                        android:fontFamily="@font/sfpro_bold"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <ImageView
                        android:id="@+id/iv_pushups"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pushups"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pushups"
                        android:fontFamily="@font/sefpro_medium"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toBottomOf="@id/iv_pushups"
                        android:layout_marginTop="2dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:layout_constraintTop_toTopOf="@+id/cardView1"
                app:layout_constraintLeft_toRightOf="@+id/cardView1"
                app:layout_constraintBottom_toBottomOf="@+id/cardView1"
                android:layout_marginLeft="16dp"
                app:cardElevation="2dp"
                android:layout_marginStart="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_strength_trainig"
                    android:padding="5dp">


                    <TextView
                        android:id="@+id/tv_count2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/circular_background"
                        android:fontFamily="@font/sfpro_bold"
                        android:gravity="center_horizontal"
                        android:text="10"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iv_dips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/dips"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/sefpro_medium"
                        android:text="Dips"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_dips" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:layout_constraintTop_toTopOf="@+id/cardView2"
                app:layout_constraintLeft_toRightOf="@+id/cardView2"
                app:layout_constraintBottom_toBottomOf="@+id/cardView2"
                android:layout_marginLeft="16dp"
                app:cardElevation="2dp"
                android:layout_marginStart="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/purple_bg"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tv_count3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/circular_background"
                        android:fontFamily="@font/sfpro_bold"
                        android:gravity="center_horizontal"
                        android:text="10"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iv_hs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/hs"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/sefpro_medium"
                        android:text="Handstand"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_hs" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:layout_constraintTop_toTopOf="@+id/cardView3"
                app:layout_constraintLeft_toRightOf="@+id/cardView3"
                app:layout_constraintBottom_toBottomOf="@+id/cardView3"
                android:layout_marginLeft="16dp"
                app:cardElevation="10dp"
                android:layout_marginStart="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_skills_trainig"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tv_count4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/circular_background"
                        android:fontFamily="@font/sfpro_bold"
                        android:gravity="center_horizontal"
                        android:text="20"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iv_pushups2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pushups"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/sefpro_medium"
                        android:text="Pushup"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_pushups2" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/cardView4"
                app:layout_constraintLeft_toRightOf="@+id/cardView4"
                app:layout_constraintBottom_toBottomOf="@+id/cardView4"/>


        </androidx.constraintlayout.widget.ConstraintLayout>



    </HorizontalScrollView>










</androidx.constraintlayout.widget.ConstraintLayout>